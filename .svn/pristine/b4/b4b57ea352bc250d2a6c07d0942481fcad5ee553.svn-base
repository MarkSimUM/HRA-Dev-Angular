<h4>Select a date</h4>
    <div class="row">
        <div class="col-md-6">
            <p class="input-group">
              <input type="text" class="form-control" datepicker-popup="{{format}}" ng-model="dt" is-open="opened" min-date="minDate" max-date="'2015-06-22'" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" ng-required="true" close-text="Close" />
              <span class="input-group-btn">
                <button type="button" class="btn btn-default" ng-click="open($event)"><i class="glyphicon glyphicon-calendar"></i></button>
              </span>
            </p>
        </div>
    </div>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Accounts
            <div class="pull-right"> <button type="button" class="btn btn-default btn-xs" ng-click="account.getAccountList()">Accounts</button>
            </div>
        </h3>
    </div>

<div class='container-fluid'>

    <h4>Select an Account</h4>
    <!-- <pre>Model: {{account.model.gridData.options.data | json}}</pre> -->
    <input type="text" ng-model="selected" typeahead="account as account.ACCOUNTNAME for account in ::account.model.accountList | filter:$viewValue | limitTo:8" class="form-control">
	<br>SELECTED: {{selected}}<br>

  </div>


  
